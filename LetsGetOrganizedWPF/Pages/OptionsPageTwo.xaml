<Page x:Class="LetsGetOrganizedWPF.Pages.OptionsPageTwo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetsGetOrganizedWPF.Pages"
      xmlns:uc_page_two="clr-namespace:LetsGetOrganizedWPF.UserControls.OptionsPageTwo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OptionsPageTwo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <Border Grid.Row="0"
        Background="#FFEFF6FF"
        BorderBrush="{StaticResource BorderSoft}"
        BorderThickness="1"
        CornerRadius="14"
        Padding="14">
            <TextBlock Style="{StaticResource SectionHeaderText}">
                Awesome! Now that we know what files we're dealing with, let's set up some options.
                <LineBreak/>
                Here you'll decide how you want them split up, and where you want them to go.
                <LineBreak/>
                You can change them in the next step if you want to try something different.
            </TextBlock>
        </Border>

        <Border Grid.Row="1"
            Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="18">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                    Margin="0,0,0,12">
                    <uc_page_two:PresetCustomToggle x:Name="ToggleControl"/>
                </StackPanel>

                <StackPanel Grid.Row="1"
                    Margin="0,0,0,12">
                    <uc_page_two:StepTwoPresets x:Name="PresetsControl"/>
                </StackPanel>

                <StackPanel Grid.Row="1"
                    Margin="0,0,0,12">
                    <uc_page_two:StepTwoCustom x:Name="CustomControl"/>
                </StackPanel>

                <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                    <Button Content="Next"
                            Style="{StaticResource PrimaryButton}"
                            Width="120"
                            Margin="0,0,12,0"/>

                    <Button Content="I Changed My Mind"
                            Style="{StaticResource DangerButtonStyle}"
                            Click="GoBackButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2"
            Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="0,1,0,0"
            Padding="10">
            <TextBlock Text="MIT Licensed • © 2025 Contributors"
               Foreground="{StaticResource TextSecondary}"
               FontSize="12"
               HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
