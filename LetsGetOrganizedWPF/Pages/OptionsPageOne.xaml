<Page x:Class="LetsGetOrganizedWPF.Pages.OptionsPageOne"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:uc="clr-namespace:LetsGetOrganizedWPF.UserControls.OptionsPageOne"
      xmlns:local="clr-namespace:LetsGetOrganizedWPF"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="OptionsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
            Background="#FFEFF6FF"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="14">
            <TextBlock Style="{StaticResource SectionHeaderText}">
                Perfect! Now that you've decided what directory we're going to clean up, let's
                <LineBreak/>
                put some limitations on what types of files to organize and where to put them.
                <LineBreak/>
                I'd hate to break your entire computer...
                <LineBreak/>
                :D
            </TextBlock>
        </Border>

        <Border Grid.Row="1"
            Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="18">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="640">
                <uc:OptionsStepOneControl x:Name="StepOneControl"/>
                <StackPanel Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="0,16,0,0">
                    <Button Content="Next"
                        Style="{StaticResource PrimaryButton}"
                        Width="120"
                        Margin="0,0,12,0"
                        Click="NextButton_Click"/>

                    <Button Content="I Changed My Mind"
                        Style="{StaticResource DangerButtonStyle}"
                        Click="GoBackButton_Click"/>                    
                </StackPanel>

            </StackPanel>
        </Border>

        <Border Grid.Row="2"
            Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="0,1,0,0"
            Padding="10">
            <TextBlock Text="MIT Licensed • © 2025 Contributors"
               Foreground="{StaticResource TextSecondary}"
               FontSize="12"
               HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
