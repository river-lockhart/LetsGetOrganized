<UserControl x:Class="LetsGetOrganizedWPF.UserControls.OptionsStep1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:LetsGetOrganizedWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Step 1: Choose what to include"
                Style="{StaticResource SectionHeaderText}"
                Margin="0,0,0,12"/>
        </StackPanel>

        <StackPanel Grid.Row="1" x:Name="DriveSelection">
            <uc:Step1DriveSelection x:Name="DriveSelectionControl"/>
        </StackPanel>

        <StackPanel Grid.Row="2">

            <TextBlock Text="File Types"
                Style="{StaticResource SectionHeaderText}"
                FontSize="16"
                Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="AllExtensionsRadio"
                        Content="Everything"
                        IsChecked="True"
                        Margin="0,0,20,0"
                        Checked="AllExtensionsRadio_Checked"/>
                <RadioButton x:Name="CustomExtensionsRadio"
                        Content="Custom"
                        Checked="CustomExtensionsRadio_Checked"/>
            </StackPanel>

            <StackPanel x:Name="CustomExtensionsPanel"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Visibility="Collapsed"
                Margin="0,10,0,0">

                <Grid Width="360">
                    <TextBox x:Name="CustomExtensionsTextBox"
                            Style="{StaticResource PrettyTextBox}"
                            IsEnabled="False"/>

                    <TextBlock x:Name="PlaceholderTextBlock"
                        Text=".jpg, .png, .pdf (comma-separated)"
                        Foreground="#FF94A3B8"
                        Margin="14,0,0,0"
                        VerticalAlignment="Center"
                        IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=CustomExtensionsTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>


            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0" Grid.Row="3">
                <CheckBox x:Name="IncludeSubfoldersCheckBox" Content="Include Subfolders" Margin="0,0,20,0" Checked="SubfoldersCheckbox_Checked" Unchecked="SubfoldersCheckbox_Unchecked">
                    <CheckBox.ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="Subfolders"/>
                            <TextBlock TextWrapping="Wrap" Width="220"> Includes all files within subdirectories of the selected folder. If unchecked, only files directly within the selected folder will be organized. We'll deal with folders in the next step!</TextBlock>
                        </StackPanel>
                    </CheckBox.ToolTip>
                </CheckBox>
                <CheckBox x:Name="IncludeHiddenCheckBox" Content="Include Hidden Files" Checked="HiddenCheckbox_Checked" Unchecked="HiddenCheckbox_Unchecked">
                    <CheckBox.ToolTip>
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="Hidden files"/>
                            <TextBlock TextWrapping="Wrap" Width="220"> Includes files and folders marked as hidden by the operating system. Please for the love of all that is holy, don't touch this unless you know what you're doing.</TextBlock>
                        </StackPanel>
                    </CheckBox.ToolTip>
                </CheckBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
