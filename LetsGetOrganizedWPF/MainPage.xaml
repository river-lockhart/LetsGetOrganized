<Page x:Class="LetsGetOrganizedWPF.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetsGetOrganizedWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <Border Background="#FFEFF6FF"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="14"
            Margin="0,0,0,12">
            <TextBlock Text="Let's Get Organized" Style="{StaticResource TitleText}"/>
        </Border>

        <!-- intro -->
        <Border Grid.Row="1"
            Background="{StaticResource CardBg}"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="18"
            Margin="0,0,0,12">
            <StackPanel HorizontalAlignment="Center" Width="640" VerticalAlignment="Center">
                <TextBlock Text="Are you sick of a full Downloads folder or ..."
                       Style="{StaticResource SectionHeaderText}"
                       Margin="0,0,0,10"/>

                <TextBlock Style="{StaticResource BodyText}">
                Are you sick of files seeming like they're just thrown in random spots on your drive because you didn't pay
                <LineBreak/>
                attention to where you saved them?
                </TextBlock>

                <TextBlock Margin="0,10,0,0" Style="{StaticResource BodyText}">
                Let's Get Organized is here to help you take control of your files and folders!
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- main -->
        <Grid Grid.Row="2" HorizontalAlignment="Center" Width="640">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"/>

            <TextBlock Grid.Row="1"
           Text="Begin organizing your entire drive here!"
           Style="{StaticResource BodyText}"
           Margin="0,0,0,8"/>

            <Button Grid.Row="2"
        Content="Continue"
        Style="{StaticResource PrimaryButton}"
        Width="180"
        Margin="0,0,0,18"
        Click="StartOrganizingFullDrive_Click"/>

            <TextBlock Grid.Row="3"
           Text="Or choose to organize specific folders instead"
           Style="{StaticResource BodyText}"
           Margin="0,0,0,10"/>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
             x:Name="SelectedPathTextBox"
             Style="{StaticResource PrettyTextBox}"
             Width="360"
             IsReadOnly="True"
             Text="No folder selected"/>

                <Button Grid.Column="2"
            Content="Browse"
            Style="{StaticResource GhostButton}"
            Width="110"
            Click="BrowseButton_Click"/>

                <Button Grid.Column="4"
            x:Name="OrganizeFolderButton"
            Content="Continue"
            Style="{StaticResource PrimaryButton}"
            Width="110"
            Click="OrgBrowsedDirectory_Click"
            IsEnabled="false"/>
            </Grid>

            <Grid Grid.Row="5"/>

        </Grid>


        <!-- footer -->
        <Border Grid.Row="3"
        Background="{StaticResource CardBg}"
        BorderBrush="{StaticResource BorderSoft}"
        BorderThickness="0,1,0,0"
        Padding="10">
            <TextBlock Text="MIT Licensed • © 2025 Contributors"
               Foreground="{StaticResource TextSecondary}"
               FontSize="12"
               HorizontalAlignment="Center"/>
        </Border>

    </Grid>
</Page>
