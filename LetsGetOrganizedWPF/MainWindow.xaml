<Window x:Class="LetsGetOrganizedWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetsGetOrganizedWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Background="AliceBlue" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Let's Get Organized" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1" Margin="10" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Name="TaskDetailsPanel">
                <TextBlock Text="Are you sick of a full Downloads folder or ..." FontSize="18" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>
                <TextBlock TextAlignment="Center">
                    Are you sick of files seeming like they're just thrown in random spots on your drive because you didn't pay
                    <LineBreak/>
                    attention to where you saved them? 
                </TextBlock>
                <TextBlock/>
                <TextBlock TextAlignment="Center">
                    Lets Get Organized is here to help you take control of your files and folders!
                </TextBlock>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Name="StartOrganizing">
            <Grid Grid.Row="2" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Begin organizing your entire drive here!"
                   TextAlignment="Center"
                   Margin="0,0,0,6"/>

                    <Button Content="Start Organizing"
                Height="40"
                Padding="14,6"
                Margin="0,0,0,18"
                HorizontalAlignment="Center"
                Click="StartOrganizing_Click"/>

                    <TextBlock Text="Or choose to organize specific folders instead"
                   TextAlignment="Center"
                   Margin="0,0,0,6"/>

                    <Button Content="Browse"
                Height="40"
                Padding="14,6"
                HorizontalAlignment="Center"
                Click="SelectFolders_Click"/>
                </StackPanel>
            </Grid>

        </Grid>
        <Grid Grid.Row="3" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="© 2025 Lets Get Organized" FontSize="12" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
