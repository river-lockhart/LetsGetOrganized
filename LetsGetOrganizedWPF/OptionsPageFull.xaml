<Page x:Class="LetsGetOrganizedWPF.OptionsPageFull"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetsGetOrganizedWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OptionsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        
        <Border Background="#FFEFF6FF"
            BorderBrush="{StaticResource BorderSoft}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="14"
            Grid.Row="0"
            Margin="0,0,0,12">
            <TextBlock Style="{StaticResource SectionHeaderText}">
                Perfect! Now that you've decided what directory we're going to clean up, let's
                <LineBreak/>
                put some limitations on what types of files to organize and where to put them.
                <LineBreak/>
                I'd hate to break your entire computer... 
                <LineBreak/>
                :D
            </TextBlock>
        </Border>

        <Button Content="Organize"
                Style="{StaticResource PrimaryButton}"
                Width="120"
                HorizontalAlignment="Center"
                Grid.Row="1"
                Margin="0,0,0,12"
                Click="OrganizeButton_Click"/>

        <Button Content="Go Back"
                Style="{StaticResource PrimaryButton}"
                Width="120"
                HorizontalAlignment="Center"
                Grid.Row="2"
                Click="GoBackButton_Click"/>
        
        
    </Grid>
</Page>
